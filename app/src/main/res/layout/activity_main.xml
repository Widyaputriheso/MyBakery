<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/priwinkle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/pemesan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Nama Pelanggan"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="394dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_toEndOf="@+id/pemesan"
        android:text="Menu"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="388dp"
        android:layout_toRightOf="@+id/pemesan" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pemesan"
        android:layout_marginTop="27dp"
        android:layout_toStartOf="@+id/pemesan"
        android:text="Keluar"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="388dp"
        android:layout_toLeftOf="@+id/pemesan" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="401dp"
        android:layout_height="356dp"
        android:layout_below="@+id/pemesan"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="97dp"
        android:layout_marginBottom="216dp"
        android:background="@android:drawable/screen_background_light_transparent"
        android:src="@drawable/selamat"
        app:srcCompat="@drawable/selamat"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="8dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="216dp"
        android:src="@drawable/celosia"
        app:srcCompat="@drawable/celosia"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="151dp" />



</RelativeLayout>